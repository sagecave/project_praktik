<div class="card_holder">
  <div class="card_container">
    <div class="card">
      <img src="/src/assets/images/testPic.png" alt="" />
      <div class="andreas"><h2>AN<span>DRE</span>AS</h2></div>
      <div class="hello_andreas"><h2>HEL<span>LO!</span></h2></div>
    </div>
  </div>
</div>

<style>
  span {
    color: #19191900;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: white;
  }
  .andreas {
    position: absolute;
    top: 85%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 5;
    color: white;
    h2 {
      font-size: clamp(4rem, 2rem + 5.2174vw, 7rem);
    }
  }
  .hello_andreas {
    position: absolute;
    top: -3%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 3;
    color: white;
    rotate: 330deg;
    h2 {
      font-size: clamp(9.875rem, 9.1359rem + 3.6957vw, 12rem);
    }
  }
  .card_holder {
    grid-column: 1;
    grid-row: 1/3;
  }
  .card {
    position: relative;
    background: rgba(118, 118, 118, 0.18);
    border-radius: 30px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(118, 118, 118, 0.3);
    backdrop-filter: blur(10px);

    &::before {
      content: "";

      background-image: url(/src/assets/icons/sun.svg);

      width: 7rem;
      height: 7rem;
      position: absolute;
      top: 85%;
      left: 2%;
      transform: translate(-50%, -50%);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1;
      background-repeat: no-repeat;
      color: white;
    }
    &::after {
      content: "";

      background-image: url(/src/assets/icons/smile.svg);

      width: 10rem;
      height: 10rem;
      position: absolute;
      top: 40%;
      left: 86%;
      transform: translate(-50%, -50%);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1;
      background-repeat: no-repeat;
      color: white;
    }

    img {
      width: 100%;
      object-fit: cover;
      z-index: 4;
      position: relative;
    }
    @media screen and (width < 800px) {
      .hello_andreas {
        display: none;
      }
    }
  }
</style>
