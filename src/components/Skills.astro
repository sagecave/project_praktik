---
import { Image } from "astro:assets";
import htmlPic from "../assets/images/html.png";
import cssPic from "../assets/images/css.png";
import jsPic from "../assets/images/js.png";
import reactPic from "../assets/images/react.png";
import nextPic from "../assets/images/next.png";
import astroPic from "../assets/images/astro.png";
import githubPic from "../assets/images/github.png";
import figmaPic from "../assets/images/figma.png";
import netlifyPic from "../assets/images/netlify.png";
---

<div class="skill_holder">
  <div class="container">
    <h2>Skilles</h2>
    <div class="skilles_container">
      <div class="skilles"><Image src={htmlPic} alt="/" /></div>
      <div class="skilles"><Image src={cssPic} alt="/" /></div>
      <div class="skilles"><Image src={jsPic} alt="/" /></div>
      <div class="skilles"><Image src={reactPic} alt="/" /></div>
      <div class="skilles"><Image src={nextPic} alt="/" /></div>
      <div class="skilles"><Image src={astroPic} alt="/" /></div>
      <div class="skilles"><Image src={githubPic} alt="/" /></div>
      <div class="skilles"><Image src={figmaPic} alt="/" /></div>
      <div class="skilles"><Image src={netlifyPic} alt="/" /></div>
    </div>
  </div>
</div>

<style>
  .skill_holder {
    grid-column: 1;
    grid-row: 3;
  }
  .skilles_container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;

    padding: 1.5rem;
    gap: 0.5rem;
    .skilles {
      height: fit-content;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;

      background-color: rgb(85, 84, 84);
      border-radius: 20px;
      max-width: 3rem;
      max-height: 3rem;
      padding: 2.2rem 2.7rem;
    }
  }
  @media screen and (width > 800px) {
    .container {
      background: rgba(118, 118, 118, 0.18);
      border-radius: 30px;
    }
  }
  h2 {
    padding: 0.5rem 2.7rem 0 2rem;
  }
</style>
