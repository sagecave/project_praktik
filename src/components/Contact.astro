---
import { Image } from "astro:assets";
import linkedInSvg from "../assets/icons/linkedin.svg";
import mailSvg from "../assets/icons/mail.svg";
import phoneSvg from "../assets/icons/phone.svg";
---

<div class="caotact_holder">
  <div class="contact_container">
    <h2>Contact me</h2>

    <div class="links">
      <a class="linkedin" href="https://www.linkedin.com/in/andreas-amadeu-568242260/">
        <Image src={linkedInSvg} alt="/" />
      </a>
      <a class="mail" href="mailto:Andreassage@gmail.com">
        <Image src={mailSvg} alt="/" />
        <img src="/src/assets/icons/mail.svg" alt="" />
      </a>
      <a class="phone" href="tel:22507898">
        <Image src={phoneSvg} alt="/" />
        <img src="/src/assets/icons/phone.svg" alt="" />
      </a>
    </div>
  </div>
</div>

<style>
  @container (width > 400px) {
    .links {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
      gap: 0.5rem;
      height: 39%;
    }
    h2 {
      display: none;
    }
    .linkedin {
      grid-column: 1;
      grid-row: 1/3;
    }
    a {
      background-color: rgba(118, 118, 118, 0.18);
      border-radius: 30px;
      padding: 2.4rem 1.5rem;
    }
    a:hover {
      background-color: rgba(118, 118, 118, 0.307);
    }

    .linkedin img {
      width: 5rem;
    }
    .mail img {
      width: 3rem;
    }
    .phone img {
      width: 3rem;
    }
  }

  @container (width < 399px) {
    .links {
      display: flex;
      flex-direction: row;
      margin-top: 1rem;
      gap: 1rem;
      flex-wrap: wrap;
    }
    a {
      border-radius: 30px;
      border: solid var(--color_darkGrey) 2px;
      padding: 0.5rem 1.5rem;
    }
  }
  .contact_container {
    container-type: inline-size;
    height: 100%;
  }

  .caotact_holder {
    grid-column: 2;
    grid-row: 3;
  }

  a {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
