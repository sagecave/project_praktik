---
import { Image } from "astro:assets";
---

<div class="fitContent">
  <div class="characterBox_container">
    <button class="charcterFirst" type="button">
      <h2>TRY</h2>
    </button>
    <button class="charcterSecond" type="button">
      <h2>ME</h2>
    </button>
    <button class="charcterThird" type="button">
      <h2>OUT</h2>
    </button>
  </div>
</div>

<style>
  @media screen and (width > 750px) {
    @container (width > 200px) {
      .characterBox_container {
        margin-top: 0rem;
      }
    }
  }
  @media screen and (width < 749px) {
    @container (width < 500px) {
      .characterBox_container {
        margin-top: 1rem;
      }
    }
  }
  img {
    object-fit: contain;
  }
  .fitContent {
    height: fit-content;
  }
  button {
  }

  .characterBox_container {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    gap: 1rem;

    background: rgba(118, 118, 118, 0.18);
    border-radius: 30px;
    padding: 0.5rem;
    > button {
      background: rgba(118, 118, 118, 0.18);
      border-radius: 30px;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(118, 118, 118, 0.3);
      width: 100%;
      min-height: 3rem;

      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    > * {
      background: rgba(118, 118, 118, 0.18);
      border-radius: 30px;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(118, 118, 118, 0.3);
    }
  }

  .charcterFirst:hover {
    background-color: rgb(236, 95, 24);
  }

  .charcterSecond:hover {
    background-color: rgb(236, 95, 24);
  }
  .charcterThird:hover {
    background-color: rgb(236, 95, 24);
  }
</style>
